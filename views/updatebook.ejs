<%- include("partials/header")%>
  <%- include("partials/nav")%>
    <!--  -->
    <div class="d-flex w-100 mt-5 px-5">
      <img class="w-50"
        src="<%=book.poster%>"
        alt="">

      <form class="w-50 px-5" class="rounded p-5 mt-5 container " action="/update-book/<%=book._id%>" method="post">
        <h1 class="mb-3 fs-1 fw-bolder">Book Details</h1>
        <input value="<%=book.poster%>" class="w-100 form-control mb-3 py-2" type="url" placeholder="Book Poster" name="poster">
        <input value="<%=book.name%>" class="  form-control mb-3 py-2" type="text" placeholder="Book Name" name="name">
        <input value="<%=book.author%>" class=" form-control mb-3 py-2" type="text" placeholder="Author Name" name="author">
        <br>
        <input value="<%=book.isbn%>" class=" form-control mb-3 py-2" type="text" placeholder="ISBN Number" name="isbn">
        <input value="<%=book.price%>" class=" form-control mb-3 py-2" type="number" placeholder="Book Price" name="price">
        <textarea name="description" rows="5" class="w-100 form-control mb-3 py-2"
          placeholder="enter description here..."><%=book.description%></textarea>

        <button class="btn btn-primary">Update Book</button>
      </form>

    </div>



    <!--  -->
    <%- include("partials/footer")%>